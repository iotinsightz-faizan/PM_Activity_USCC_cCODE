#include <Wire.h>
#include "MAX30105.h"
#include "heartRate.h"

MAX30105 particleSensor;

const byte RATE_SIZE = 4; // Number of samples for averaging
byte rates[RATE_SIZE];    // Array to store heart rate readings
byte rateSpot = 0;
long lastBeat = 0;        // Time of the last beat
float beatsPerMinute;
int beatAvg;

void setup() {
  Serial.begin(115200);
  Serial.println("Initializing...");

  // Initialize sensor
  if (!particleSensor.begin(Wire, I2C_SPEED_FAST)) { // I2C 400kHz
    Serial.println("MAX30102 was not found. Please check wiring/power.");
    while (1);
  }

  Serial.println("Place your index finger on the sensor with steady pressure.");

  // Configure sensor
  particleSensor.setup(); // Use default configuration
  particleSensor.setPulseAmplitudeRed(0x0A);   // Dim Red LED (running indicator)
  particleSensor.setPulseAmplitudeGreen(0);    // Turn off Green LED
}

void loop() {
  long irValue = particleSensor.getIR(); // Read IR value from sensor

  if (checkForBeat(irValue) == true) {
    // A beat was detected!
    long delta = millis() - lastBeat;
    lastBeat = millis();

    beatsPerMinute = 60 / (delta / 1000.0);

    // Filter out unrealistic BPM values
    if (beatsPerMinute < 255 && beatsPerMinute > 20) {
      rates[rateSpot++] = (byte)beatsPerMinute;
      rateSpot %= RATE_SIZE;

      // Average the readings
      beatAvg = 0;
      for (byte x = 0; x < RATE_SIZE; x++) {
        beatAvg += rates[x];
      }
      beatAvg /= RATE_SIZE;
    }
  }

  // Print data
  Serial.print("IR = ");
  Serial.print(irValue);
  Serial.print(", BPM = ");
  Serial.print(beatsPerMinute);
  Serial.print(", Avg BPM = ");
  Serial.print(beatAvg);

  if (irValue < 50000)
    Serial.print("  No finger?");

  Serial.println();
  delay(100);
}
